@model BlognaCorev2.Models.Post
@{
    ViewData["Title"] = "Gönderi Düzenle";
}

<div class="container mx-auto max-w-2xl py-8">
    <!-- Ana Başlık -->
    <h1 class="text-4xl font-extrabold mb-6 text-gray-800 border-b pb-2">
        <i class="fas fa-edit mr-2 text-indigo-600"></i> Gönderiyi Düzenle
    </h1>

    <!-- Düzenleme Formu -->
    <form asp-action="Edit" method="post" class="bg-white shadow-2xl rounded-xl p-8 space-y-6 border border-gray-100">
        
        <!-- Başlık Alanı -->
        <div>
            <label asp-for="Title" class="block mb-2 text-lg font-semibold text-gray-700">Başlık</label>
            <input asp-for="Title" 
                   class="w-full border-2 border-gray-300 px-4 py-2 rounded-lg transition duration-200 
              focus:border-indigo-500 focus:ring-indigo-500 shadow-sm
              /* KRİTİK DÜZELTME: Metin rengini siyaha zorlar */
              !text-gray-900 !bg-white placeholder:!text-gray-500"
                   placeholder="Gönderi başlığını girin..." />
            <span asp-validation-for="Title" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <!-- İçerik Alanı -->
        <div>
            <label asp-for="Content" class="block mb-2 text-lg font-semibold text-gray-700">İçerik</label>
            <textarea asp-for="Content" 
                  class="w-full border-2 border-gray-300 px-4 py-2 rounded-lg h-64 resize-y transition duration-200 
                         focus:border-indigo-500 focus:ring-indigo-500 shadow-sm
                         /* KRİTİK DÜZELTME: Metin rengini siyaha zorlar */
                         !text-gray-900 !bg-white placeholder:!text-gray-500"
                  placeholder="Makalenizin tüm içeriği..."></textarea>
            <span asp-validation-for="Content" class="text-red-600 text-sm mt-1 block"></span>
        </div>
        
        <!-- Yayınlama Onay Kutusu -->
        <div>
            <label asp-for="Ispublished" class="inline-flex items-center cursor-pointer p-2 bg-indigo-50 hover:bg-indigo-100 rounded-lg transition duration-200">
                <input asp-for="Ispublished" 
                       type="checkbox" 
                       class="form-checkbox h-5 w-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                <span class="ml-3 text-gray-700 font-medium">Bu gönderiyi hemen yayınla</span>
            </label>
        </div>

        <!-- İşlem Butonları -->
        <div class="pt-4 flex justify-end space-x-3">
            <!-- Güncelle Butonu (Birincil Aksiyon) -->
            <button type="submit" 
                    class="flex items-center bg-indigo-600 text-white px-6 py-3 rounded-xl font-bold text-lg 
                           hover:bg-indigo-700 transition duration-300 transform hover:scale-[1.02] shadow-lg shadow-indigo-200">
                <i class="fas fa-save mr-2"></i> Güncelle
            </button>
            
            <!-- İptal Butonu (İkincil Aksiyon) -->
            <a href="/Home/Index" 
               class="flex items-center bg-gray-300 text-gray-700 px-6 py-3 rounded-xl font-semibold text-lg 
                      hover:bg-gray-400 transition duration-300 shadow-md">
                <i class="fas fa-times-circle mr-2"></i> İptal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Font Awesome (ikonlar için) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}