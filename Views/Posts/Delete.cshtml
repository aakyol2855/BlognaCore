@model BlognaCorev2.Models.Post
@{
    // Sayfa başlığını daha açıklayıcı yapalım
    ViewData["Title"] = "Gönderi Silme Onayı";
}

<div class="container mx-auto max-w-lg py-12">
    
    <!-- Ana Uyarı Kartı -->
    <div class="bg-white shadow-2xl rounded-xl p-8 space-y-6 border-t-8 border-red-600">
        
        <!-- Başlık ve İkon -->
        <div class="text-center">
            <i class="fas fa-exclamation-triangle text-red-600 text-5xl mb-3 animate-pulse"></i>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Gönderiyi Silmek Üzeresiniz</h1>
            <p class="text-lg text-red-700 font-semibold">Bu işlem geri alınamaz!</p>
        </div>

        <!-- Gönderi Özeti -->
        <div class="bg-red-50 p-4 rounded-lg border border-red-200">
            <p class="text-gray-700 text-base mb-2">Aşağıdaki gönderiyi kalıcı olarak silmek istediğinizden emin misiniz?</p>
            <p class="text-xl font-extrabold text-red-800">“@Model.Title”</p>
        </div>

        <!-- Silme Formu -->
        <form asp-action="Delete" method="post" class="space-y-4">
            <!-- Gönderi ID'si gizli alan olarak tutulur -->
            <input type="hidden" asp-for="Id" />
            
            <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-4 pt-4">
                
                <!-- Sil Butonu (Birincil Aksiyon - Kırmızı) -->
                <button type="submit" 
                        class="flex-1 flex items-center justify-center bg-red-600 text-white px-6 py-3 rounded-xl font-bold text-lg 
                               hover:bg-red-700 transition duration-300 transform hover:scale-[1.02] shadow-lg shadow-red-200">
                    <i class="fas fa-trash-alt mr-2"></i> Evet, Gönderiyi Sil
                </button>
                
                <!-- İptal Butonu (İkincil Aksiyon - Gri) -->
                <a href="/Posts/MyPosts" 
                   class="flex-1 flex items-center justify-center bg-gray-300 text-gray-700 px-6 py-3 rounded-xl font-semibold text-lg 
                          hover:bg-gray-400 transition duration-300 shadow-md">
                    <i class="fas fa-times-circle mr-2"></i> İptal ve Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Font Awesome (ikonlar için) -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}