@model IEnumerable<BlognaCorev2.Models.Post>
@{
    ViewData["Title"] = "Arama Sonuçları";
}

<h1 class="text-3xl font-bold mb-6">Arama Sonuçları</h1>

@if (Model == null || !Model.Any())
{
    <p class="text-gray-600">Hiç sonuç bulunamadı.</p>
}
else
{
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var post in Model)
        {
            <div class="bg-white rounded shadow p-4 flex flex-col justify-between">
                <div>
                    <h2 class="text-xl font-semibold mb-2">@post.Title</h2>
                    <p class="text-gray-600 mb-4">@post.Content.Substring(0, Math.Min(post.Content.Length, 100))...</p>
                </div>
                <div class="flex justify-between items-center text-sm text-gray-500">
                    <span>@post.Author</span>
                    <span>@post.UpdatedAt.ToString("dd MMM yyyy")</span>
                </div>
                <a href="/Posts/Details/@post.Id" class="mt-3 inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Oku</a>
            </div>
        }
    </div>
}